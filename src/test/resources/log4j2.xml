<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="FileAppender" fileName="target/logfile_test.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="studentorder" level="info" additivity="false">
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <Logger name="studentorder.dao" level="all" additivity="false">
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <Root level="error">
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>